<div class="container ">
  <div class="d-flex align-items-center justify-content-center mb-5">
    <h1 class= >Your Courses ðŸ“–</h1>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div>
      <% @bookings.each do |booking| %>
          <div class="card--outerbooking text-center mb-4">
            <h5><%= booking.course.language.name.upcase %>  <%= booking.course.level %> with <strong><%= booking.course.teacher.name %></strong> <br>
            start: <%= booking.course.start_at.strftime("%e-%m-%y at %H.%M") %>
            <%= link_to "Cancel the Course", booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to cancel this course?" }, class: 'button--cancel--booking center mt-2' %>
          </div>



      <% end %>

    </div>


    <%#= month_calendar do |date| %>
      <%#= date.day %>
    <%# end %>
  </div>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Dropdown button
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Action</a>
      <a class="dropdown-item" href="#">Another action</a>
      <a class="dropdown-item" href="#">Something else here</a>
  </div>
</div>

</div>
